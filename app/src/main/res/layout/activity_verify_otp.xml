<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.OTP.SendOtpActivity">

    <ImageView
        android:id="@+id/signup_options_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginTop="@dimen/double_big_margin"
        android:src="@drawable/signup_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Verification"
        android:textColor="@color/text_header_dark_color"
        android:textSize="@dimen/big_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_options_img" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:paddingStart="@dimen/mid_margin"
        android:paddingEnd="@dimen/mid_margin"
        android:text="Enter the OTP send to"
        android:textAlignment="center"
        android:textColor="@color/text_header_dark_color"
        android:textSize="@dimen/mid_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_1" />


    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/mid_margin"
        android:paddingEnd="@dimen/mid_margin"
        android:text="+201002452480"
        android:textAlignment="center"
        android:textColor="@color/text_header_dark_color"
        android:textSize="@dimen/mid_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_2" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_number_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/mid_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_1"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_otp_item"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/code_2"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_otp_item"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/code_3"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_otp_item"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/code_4"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_otp_item"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/code_5"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_otp_item"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/code_6"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_otp_item"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            android:layout_weight="2">

            <Button
                android:id="@+id/verify_otp_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_size"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/mid_margin"
                android:background="@drawable/button_shape"
                android:text="Verify"
                android:textAllCaps="false"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/verify_progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/mid_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="2"
                android:text="Didn't receive any code?"
                android:textAlignment="center"
                android:textColor="@color/text_header_dark_color"
                android:textSize="@dimen/mid_text" />


            <TextView
                android:id="@+id/resend_code_again_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Resend New Code"
                android:textAlignment="center"
                android:textColor="@color/main_color"
                android:textSize="@dimen/mid_text"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>