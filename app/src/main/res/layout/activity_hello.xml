<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hello.HelloActivity">


    <ImageView
        android:id="@+id/upper_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:src="@drawable/upper_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-120dp"
        android:text="Learning is Everything"
        android:textColor="@color/text_header_dark_color"
        android:textSize="@dimen/big_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper_img" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:maxLines="2"
        android:paddingStart="@dimen/mid_margin"
        android:paddingEnd="@dimen/mid_margin"
        android:text="Learning with Pleasure with SAMS Guide, Whenever you are. "
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="@dimen/mid_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_1" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/double_big_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginBottom="@dimen/tiny_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/get_started_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:background="@drawable/button_shape"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>